
@{
    ViewBag.Title = "HotProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý sản phẩm @temp_product.Name</h1>
        </div>
        <div id="row_filter">
            <label class="col-md-1">
                Lọc
            </label>
            <div>

            </div>
            <div class="col-md-2">
                <select class="form-control">
                    <option selected>Loại mặt hàng</option>
                    <option selected>Loại mặt hàng</option>
                    <option selected>Loại mặt hàng</option>
                    <option selected>Loại mặt hàng</option>
                    <option selected>Loại mặt hàng</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-control">
                    <option selected>Hãng</option>
                </select>
            </div>
            <div style="float: right">
                <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Thêm sản phẩm</button>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sản phẩm
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Mã sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Ảnh</th>
                                <th>Lượt view</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Code</td>
                                    <td class="center">@item.Price.GetValueOrDefault(0).ToString("N0")</td>
                                    <td class="center">@item.Quantity</td>
                                    <td style="width: 100px; height: auto"><img src="@item.Image" class="img-responsive" /></td>
                                    <td>6000</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
