
@{
    ViewBag.Title = "HotProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsChart{
    <script src="/Assets/admin/js/Chart/Chart.bundle.js"></script>
    <script src="/Assets/admin/js/Chart/utils.js"></script>
}
@section jsChartjs{
    <script src="/Assets/admin/js/Currency.js"></script>    
    <script src="/Assets/admin/js/Chart.js"></script>
}

<div id="page-wrapper">

    @* Chart *@
    <div style="display: block; width: 450px ; float:left; border-right: 1px solid #e8c2c2;">
        <label>Top sản phẩm bán chạy</label>
        <canvas id="chart-area" />
    </div>
    <div style="display: block; width: 450px ; float:right;">
        <label>Top doanh thu</label>
        <canvas id="chart-area-revenue" />
    </div>


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thống kê sản phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sản phẩm
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lg đã bán</th>
                                <th>Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody id="tb_stat">
                            
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
